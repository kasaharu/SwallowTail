<h1>新規作成</h1>

<div class="form-horizontal" role="form">
  <%= form_for(@keyword_reply) do |form| %>
    <div class="form-group">
      <%= form.label :'キーワード', class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= form.text_field :keyword, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :'応答タイプ', class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= form.select :reply_type, [['text', 'text']], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :'応答メッセージ', class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= form.text_field :reply_word, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
        <%= form.submit "作成", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
